{
  "name": "open-external",
  "description": "Open file or dir in external program",
  "repository": "https://github.com/asiloisad/pulsar-open-external",
  "keywords": [
    "open",
    "external",
    "unsupported",
    "tree",
    "paint",
    "editor"
  ],
  "version": "2.1.2",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "main": "./lib/main",
  "consumedServices": {
    "tree-view": {
      "versions": {
        "^1.0.0": "consumeTreeView"
      }
    }
  },
  "providedServices": {
    "open-external": {
      "description": "Allows packages to register custom handlers for opening external files",
      "versions": {
        "1.0.0": "provideOpenExternalService"
      }
    }
  },
  "configSchema": {
    "flag": {
      "order": 1,
      "title": "Toggle state of external opener",
      "description": "Files with the listed extensions will open in an external program.",
      "type": "boolean",
      "default": true
    },
    "list": {
      "order": 2,
      "title": "Unsupported extensions",
      "description": "List of file extensions to open externally.",
      "type": "array",
      "default": [
        "doc",
        "docx",
        "xls",
        "xlsx",
        "ppt",
        "pptx",
        "rtf",
        "exe",
        "dwg",
        "dxf",
        "sofistik",
        "cdb",
        "plb"
      ]
    }
  }
}
